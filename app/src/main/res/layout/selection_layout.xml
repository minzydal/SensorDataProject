<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/ll_selectWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cookierun"
            android:text="Please select the data list before press Graph button."
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Button
            android:id="@+id/clearBtn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="490dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background2"
            android:text="CLEAR"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/selectAllBtn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/clearBtn"
            android:background="@drawable/button_background2"
            android:text="SELECT ALL"
            android:textColor="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/select_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectAllBtn"
            android:layout_marginTop="20dp" />

    </RelativeLayout>
</LinearLayout>