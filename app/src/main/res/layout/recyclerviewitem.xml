<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemarea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border_line"
        android:gravity="center_vertical"
        >
        <CheckBox
            android:id ="@+id/checkbox"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_line"/>


        <TextView
            android:id="@+id/name_in_list"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="데이터 10"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/cookierun" />

        <TextView
            android:id="@+id/value_in_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_toRightOf="@+id/name_in_list"
            android:fontFamily="@font/cookierun"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/unit_in_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_toRightOf="@+id/value_in_list"
            android:text="V"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/cookierun"/>

    </RelativeLayout>
</LinearLayout>